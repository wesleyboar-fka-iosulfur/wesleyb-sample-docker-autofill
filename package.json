{
  "name": "wesleyb-sample-schoology-web-service",
  "version": "1.0.0",
  "description": "An auto-fill web service",
  "private": true,
  "main": "main.js",
  "scripts": {
    "api": "npm-run-all --sequential api:*",
    "api:setup": "cd api && npm ci",
    "api:docs": "shx rm -rf docs/api && cd api && npm run docs && shx cp -r docs ../docs/api",
    "api:test": "cd api && npm run test",
    "client": "npm-run-all --sequential client:*",
    "client:setup": "cd client && npm ci",
    "client:build": "shx rm -rf public && cd client && npm run build && shx cp -r build ../public",
    "client:docs": "shx rm -rf docs/client && cd client && npm run docs && shx cp -r docs ../docs/client",
    "client:test": "cd client && npm run test -- --no-watchman",
    "start": "npm-run-all --sequential build serve",
    "build": "npm-run-all --parallel client api",
    "serve": "node --harmony --use_strict --optimize_for_size main.js",
    "docs": "npm-run-all --parallel docs:*",
    "docs:client": "npm-run-all --sequential client:docs",
    "docs:api": "npm-run-all --sequential api:docs",
    "test": "npm-run-all --parallel test:*",
    "test:client": "npm-run-all --sequential client:test",
    "test:api": "npm-run-all --sequential api:test"
  },
  "author": "wesleyb@pm.me",
  "license": "UNLICENSED",
  "dependencies": {
    "koa": "^2.8.1",
    "koa-static": "^5.0.0",
    "koa-subdomain": "^3.0.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.2"
  }
}

{
  "name": "wesleyb-sample-schoology-web-service",
  "version": "1.0.0",
  "description": "An auto-fill web service",
  "private": true,
  "main": "main.js",
  "scripts": {
    "api:setup": "cd api && npm ci",
    "api:docs": "cd api && npm run docs && shx rm -rf docs/api && shx cp -r client/docs docs/api",
    "api:test": "cd api && npm run test",
    "client:setup": "cd client && npm ci",
    "client:build": "cd client && npm run build && shx rm -rf public && shx cp -r client/build public",
    "client:docs": "cd client && npm run docs && shx rm -rf docs/client && shx cp -r client/docs docs/client",
    "client:test": "cd client && npm run test",
    "start": "npm-run-all --parallel client:* api:* && npm run serve",
    "serve": "node --harmony --use_strict --optimize_for_size main.js",
    "docs": "npm-run-all --parallel docs:*",
    "docs:client": "npm-run-all --sequential client:setup client:docs",
    "docs:api": "npm-run-all --sequential api:setup api:docs",
    "test": "npm-run-all --parallel test:*",
    "test:client": "npm-run-all --sequential client:setup client:test",
    "test:api": "npm-run-all --sequential api:setup api:test"
  },
  "author": "wesleyb@pm.me",
  "license": "UNLICENSED",
  "dependencies": {
    "koa": "^2.8.1",
    "koa-static": "^5.0.0",
    "koa-subdomain": "^3.0.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.2"
  }
}
